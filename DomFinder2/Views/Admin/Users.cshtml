@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("ManageUser", new { id = user.Id })" class="btn btn-info">Zarządzaj</a>
                    <a href="@Url.Action("DeleteUser", new { id = user.Id })" class="btn btn-danger">Usuń użytkownika</a>
                </td>
            </tr>
        }
    </tbody>
</table>
